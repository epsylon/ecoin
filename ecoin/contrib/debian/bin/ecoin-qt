#!/bin/sh

set -e

umask 077

basedir=~/.ecoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/ecoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Novacoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/ecoin/ecoin-qt "$@"
